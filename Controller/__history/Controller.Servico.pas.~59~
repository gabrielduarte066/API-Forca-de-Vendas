unit Controller.Servico;

interface
   type TServico = class
       private
       public
       function  DataHora() : string;
       procedure StartServer();
       procedure StopServer();
   end;

implementation
uses Horse,
     Horse.Etag,
     Horse.Jhonson,
     Controller.Usuarios,
     System.SysUtils, Controller.Clientes;

{ Servico }

function TServico.DataHora : string;
begin
  if THorse.IsRunning then
  begin
    Result := 'Serviço Iniciado: '+ FormatDateTime('dd dddd mmmm yyyy',Date) +' Hora: ' + TimeToStr(Time);
  end;
end;


procedure TServico.StartServer;
var ldataHora : string;
usuario : TUsuarios;
clientes : TVendedor;
begin
usuario  := TUsuarios.Create;
clientes := TVendedor.Create;
try
  if not THorse.IsRunning then
    begin
      THorse.Use(Jhonson())
      .Use(Etag);
      //ROTAS
      usuario.registry;
      clientes.registry;
      THorse.Listen(9000);
    end;
finally
    FreeAndNil(usuario);
    FreeAndNil(clientes);
end;
end;

procedure TServico.StopServer;
begin
   if THorse.IsRunning = True then
    begin
      THorse.StopListen;
    end;
end;

end.
